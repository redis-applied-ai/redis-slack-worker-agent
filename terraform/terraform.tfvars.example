# Example Terraform variables file
# Copy this to terraform.tfvars and update the values

# Environment Configuration
environment = "dev"
aws_region  = "us-east-2"

# Project Configuration
# IMPORTANT: Do not use "applied-ai-agent-worker" as it is reserved for the Applied AI team
project_name = "my-ai-agent"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-2a", "us-east-2b"]

# S3 Configuration
# Bucket name should be globally unique
bucket_name = "dev-my-ai-agent"

# Auto Scaling Configuration
max_capacity = 2
min_capacity = 1
desired_capacity = 1

# Application Configuration
app_port = 3000
memory_server_port = 8000
cpu_units = 512
memory_units = 1024

# SSL Configuration (optional)
# If you have a domain and SSL certificate, uncomment and update these values
# domain_name = "your-domain.com"
# certificate_arn = "arn:aws:acm:us-east-2:ACCOUNT:certificate/CERT-ID"
# Otherwise, leave domain_name empty and the ALB will use HTTP

# Cost Optimization
single_az = true
enable_detailed_monitoring = false
